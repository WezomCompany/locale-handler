{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["ES2015", "DOM"],
    "module": "esnext",
    "target": "es6",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
